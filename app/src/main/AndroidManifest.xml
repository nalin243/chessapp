<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/chess_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/chess_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chessapp">

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Splash">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".UserRegistrationActivity"
            android:exported="true"
            android:theme="@style/Theme.Chessapp" />
        <activity
            android:name=".GameModeActivity"
            android:exported="true"
            android:theme="@style/Theme.Chessapp" />
        <activity
            android:name=".BoardActivity"
            android:exported="true" />
        <activity
            android:name=".RulesActivity"
            android:exported="true"
            android:theme="@style/Theme.Chessapp" />
        <activity
            android:name=".LeaderboardActivity"
            android:exported="false"
            android:theme="@style/AppTheme_Mystic" />
    </application>

</manifest>