<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Chessapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/cinzel_decorative</item>

    </style>

    <style name="Theme.Chessapp" parent="Base.Theme.Chessapp" />

    <style name="AppTheme_Mystic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/cinzel_decorative</item> <item name="colorPrimary">#00222B</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">#FFD700</item> <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle.Mystic</item>
    </style>

    <style name="PopupMenuStyle.Mystic" parent="Widget.AppCompat.PopupMenu">
        <item name="android:fontFamily">@font/cinzel_decorative</item> <item name="android:popupBackground">#00222B</item> <item name="android:textColor">#FFD700</item> </style>

    <style name="AppTheme_Amber" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/cinzel_decorative</item> <item name="colorPrimary">#8B5A2B</item>
        <item name="android:windowBackground">@color/wood_light_square</item>
        <item name="android:textColor">#000000</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle.Amber</item>
    </style>

    <style name="PopupMenuStyle.Amber" parent="Widget.AppCompat.PopupMenu">
        <item name="android:fontFamily">@font/cinzel_decorative</item> <item name="android:popupBackground">#A9712C</item> <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FileLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">center</item>
        <item name="android:textColor">#e8dda9</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/cinzel_decorative</item>
    </style>

    <style name="RankLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#e8dda9</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/cinzel_decorative</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.Chessapp">
        <item name="android:windowBackground">@drawable/mandala_bg</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>