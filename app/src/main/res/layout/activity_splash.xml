<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mandala_bg"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/imag_for_intro" />

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/splash_first_tagline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:fontFamily="@font/cinzel_decorative"
            android:text="Mystic"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/splash_first_tagline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:fontFamily="@font/cinzel_decorative"
            android:text="squares"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:textSize="50sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/splash_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:alpha="0.8"
        android:fontFamily="@font/cinzel_decorative"
        android:text="Every Move Holds Power"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>