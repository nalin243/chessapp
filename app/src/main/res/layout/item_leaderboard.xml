<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/leaderboard_item_bg">

    <!-- Rank number -->
    <TextView
        android:id="@+id/textRank"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="1"
        android:textColor="#FFD700"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:background="@drawable/white_pawn"
        android:contentDescription="Player Rank" />

    <!-- Player info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/textStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins: 0 | Time: 0:00"
            android:textColor="#B0B0B0"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Trophy icon for top players -->
    <ImageView
        android:id="@+id/imageTrophy"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/white_king"
        android:contentDescription="Trophy"
        android:visibility="gone" />
</LinearLayout>
