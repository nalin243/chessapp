<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:background="@drawable/leaderboard_item_bg">

    <!-- White pawn icon (left) -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/white_pawn"
        android:contentDescription="White Player" />

    <!-- Match text -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/textMatchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player White Against Player Black"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/textMatchTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 30:00 mins"
            android:textColor="#B0B0B0"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Black pawn icon (right) -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/black_pawn"
        android:contentDescription="Black Player" />
</LinearLayout>
